@model BeCoreApp.Application.ViewModels.System.NotifyViewModel
@using BeCoreApp.Data.Enums
@{
    ViewBag.Title = "Add Notify";
}

@section Styles{
    <link href="~/admin-app/controllers/notify/index.css" rel="stylesheet" asp-append-version="true" />
}

@section Scripts{
    <script src="~/admin-app/controllers/notify/add.js"></script>
    <script>
        var notifyAddObj = new NotifyAddController();
        notifyAddObj.initialize();
    </script>
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="container" id="kt_content_container">
        <div class="card mb-5 mb-xl-10">
            <div class="card-body py-3">
                <form class="form">
                    <input type="hidden" id="hidId" value="0" />

                    <div class="d-flex flex-column mb-8 fv-row">
                        <label class="d-flex align-items-center fs-6 fw-bold mb-2">
                            <span class="required">Title</span>
                        </label>
                        <input type="text" class="form-control form-control-solid" id="txtName" placeholder="Enter Target Title" />
                    </div>

                    <div class="d-flex flex-column mb-8">
                        <label class="fs-6 fw-bold mb-2">Content</label>
                        <textarea class="form-control form-control-solid" id="txtContent" rows="3"></textarea>
                    </div>

                    <div class="mb-15 fv-row">
                        <div class="d-flex flex-stack">
                            <div class="d-flex">
                                <label class="form-check form-check-custom form-check-solid me-10">
                                    <input class="form-check-input h-20px w-20px" type="checkbox" checked="checked" id="ckStatus" />
                                    <span class="form-check-label fw-bold">Status</span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <a href="/admin/notify/index" class="btn btn-light me-3">Cancel</a>
                        <button type="button" id="btnSave" class="btn btn-primary">
                            <span class="indicator-label">Submit</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>