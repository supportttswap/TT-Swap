@model BeCoreApp.Application.ViewModels.Blog.BlogCategoryViewModel
@using BeCoreApp.Data.Enums
@{
    ViewBag.Title = "Update Blog Category";
}

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/jstree.min.js"></script>
    <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script src="https://rawgit.com/adamjimenez/jstree-table/master/jstreetable.js"></script>
    <script src="~/lib/jQuery-EasyUI/jquery.easyui.min.js"></script>
    <script src="~/admin-app/controllers/blog-category/update.js" asp-append-version="true"></script>
    <script>
        var blogCategoryUpdate = new BlogCategoryUpdateController();
        blogCategoryUpdate.initialize();
    </script>
}

@section Styles{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/themes/default/style.min.css" />
    @*<link href="~/lib/jQuery-EasyUI/themes/bootstrap/easyui.css" rel="stylesheet" />*@
    <link href="~/lib/jQuery-EasyUI/themes/icon.css" rel="stylesheet" />
    <link href="~/admin-app/controllers/blog-category/index.css" rel="stylesheet" asp-append-version="true" />
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="container" id="kt_content_container">
        <div class="card mb-5 mb-xl-10">
            <div class="card-body py-3">
                <form class="form">
                    <input type="hidden" id="hideId" value="@Model.Id" />
                    <input type="hidden" id="txtSortOrder" value="@Model.SortOrder" />

                    <div class="d-flex flex-column mb-8 mt-8 fv-row">
                        <label class="d-flex align-items-center fs-6 fw-bold mb-2">
                            <span class="required">Title</span>
                        </label>
                        <input type="text" class="form-control form-control-solid" id="txtName" value="@Model.Name" />
                    </div>
                    <div class="d-flex flex-column mb-8">
                        <label class="required fs-6 fw-bold mb-2">Type</label>
                        @Html.DropDownList("Type", null, new { @class = "form-select form-select-solid" })
                    </div>
                    <div class="d-flex flex-column mb-8">
                        <label class="fs-6 fw-bold mb-2">Description</label>
                        <textarea class="form-control form-control-solid" id="txtDescription">@Model.Description</textarea>
                    </div>

                    <div class="d-flex flex-column mb-8 fv-row">
                        <label class="d-flex align-items-center fs-6 fw-bold mb-2">Function</label>
                        <input type="text" class="form-control form-control-solid" id="ddlFunctionId"  value="@Model.FunctionId"/>
                    </div>

                    <div class="d-flex flex-column mb-8 fv-row">
                        <label class="d-flex align-items-center fs-6 fw-bold mb-2">Parent Name</label>
                        <input type="text" readonly class="form-control form-control-solid" id="txtParentName" />
                    </div>
                    <div class="d-flex flex-column mb-8 fv-row">
                        <label class="d-flex align-items-center fs-6 fw-bold mb-2">Parent ID</label>
                        <input type="text" readonly class="form-control form-control-solid" id="txtParentId" value="@Model.ParentId" />
                    </div>

                    <div class="d-flex flex-column mb-8 fv-row">
                        <label class="d-flex align-items-center fs-6 fw-bold mb-2">Icon Css</label>
                        <input type="text" class="form-control form-control-solid" id="txtIconCss" value="@Model.IconCss"/>
                    </div>
                    <div class="d-flex flex-column mb-8 fv-row">
                        <label class="d-flex align-items-center fs-6 fw-bold mb-2">Url</label>
                        <input type="text" readonly class="form-control form-control-solid" id="txtUrl" value="@Model.URL"/>
                    </div>

                    <div class="d-flex flex-column mb-8 fv-row">
                        <label class="d-flex align-items-center fs-6 fw-bold mb-2">Seo Page Title</label>
                        <input type="text" class="form-control form-control-solid" id="txtSeoPageTitle" value="@Model.SeoPageTitle" />
                    </div>
                    <div class="d-flex flex-column mb-8 fv-row">
                        <label class="d-flex align-items-center fs-6 fw-bold mb-2">Seo Keywords</label>
                        <input type="text" class="form-control form-control-solid" id="txtSeoKeywords" value="@Model.SeoKeywords" />
                    </div>
                    <div class="d-flex flex-column mb-8 fv-row">
                        <label class="d-flex align-items-center fs-6 fw-bold mb-2">Seo Description</label>
                        <input type="text" class="form-control form-control-solid" id="txtSeoDescription" value="@Model.SeoDescription" />
                    </div>

                    <div class="mb-15 fv-row">
                        <div class="d-flex flex-stack">
                            <div class="d-flex">
                                <label class="form-check form-check-custom form-check-solid me-10">
                                    <input class="form-check-input h-20px w-20px" type="checkbox" id="ckStatus" @(Model.Status == Status.Active ? "checked" : "")/>
                                    <span class="form-check-label fw-bold">Status</span>
                                </label>
                                <label class="form-check form-check-custom form-check-solid me-10">
                                    <input class="form-check-input h-20px w-20px" type="checkbox" id="ckIsMain" @(Model.IsMain == Status.Active ? "checked" : "") />
                                    <span class="form-check-label fw-bold">Main</span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <a href="/admin/blogcategory/index" class="btn btn-light me-3">Cancel</a>
                        <button type="button" id="btnSave" class="btn btn-primary">
                            <span class="indicator-label">Submit</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>